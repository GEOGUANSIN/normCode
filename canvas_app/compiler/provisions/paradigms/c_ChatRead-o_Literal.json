{
  "metadata": {
    "description": "Blocks and waits for a chat message from the user. Returns the message as a literal value.",
    "inputs": {
      "vertical": {},
      "horizontal": {}
    },
    "outputs": {
      "type": "Literal",
      "description": "The user's message as a dict with 'role' and 'content' fields."
    }
  },
  "env_spec": {
    "tools": [
      {
        "tool_name": "chat",
        "affordances": [
          {
            "affordance_name": "read_message",
            "call_code": "result = tool.read_message()"
          }
        ]
      },
      {
        "tool_name": "composition_tool",
        "affordances": [
          {
            "affordance_name": "compose",
            "call_code": "result = tool.compose(plan=params['plan'], return_key=params.get('return_key'))"
          }
        ]
      },
      {
        "tool_name": "formatter_tool",
        "affordances": [
          {
            "affordance_name": "wrap",
            "call_code": "result = tool.wrap"
          }
        ]
      }
    ]
  },
  "sequence_spec": {
    "steps": [
      {
        "step_index": 1,
        "affordance": "chat.read_message",
        "params": {},
        "result_key": "read_fn"
      },
      {
        "step_index": 2,
        "affordance": "formatter_tool.wrap",
        "params": {},
        "result_key": "wrap_fn"
      },
      {
        "step_index": 3,
        "affordance": "composition_tool.compose",
        "params": {
          "plan": [
            {
              "output_key": "message",
              "function": {
                "__type__": "MetaValue",
                "key": "read_fn"
              },
              "params": {}
            },
            {
              "output_key": "wrapped_message",
              "function": {
                "__type__": "MetaValue",
                "key": "wrap_fn"
              },
              "params": {
                "__positional__": "message"
              },
              "literal_params": {
                "type": "literal"
              }
            }
          ],
          "return_key": "wrapped_message"
        },
        "result_key": "instruction_fn"
      }
    ]
  }
}

