{
  "metadata": {
    "description": "Reads a prompt template (vertical input), fills it with horizontal data, calls LLM with thinking, parses JSON response, extracts 'answer' field, and returns wrapped in Normal format.",
    "inputs": {
      "vertical": "Path to the prompt template file (passed directly as string from MFP, may be perception-wrapped).",
      "horizontal": {
        "input_1": "Primary data to inject into the prompt template.",
        "input_n": "Additional inputs are collected and injected as template variables."
      }
    },
    "outputs": {
      "type": "Normal",
      "description": "The extracted 'answer' from the LLM's JSON response."
    }
  },
  "env_spec": {
    "tools": [
      {
        "tool_name": "composition_tool",
        "affordances": [
          {
            "affordance_name": "compose",
            "call_code": "result = tool.compose(plan=params['plan'], return_key=params.get('return_key'))"
          }
        ]
      },
      {
        "tool_name": "formatter_tool",
        "affordances": [
          {
            "affordance_name": "get",
            "call_code": "result = tool.get"
          },
          {
            "affordance_name": "wrap",
            "call_code": "result = tool.wrap"
          },
          {
            "affordance_name": "parse_json",
            "call_code": "import json\nresult = json.loads"
          },
          {
            "affordance_name": "clean_code",
            "call_code": "result = tool.clean_code"
          }
        ]
      },
      {
        "tool_name": "prompt_tool",
        "affordances": [
          {
            "affordance_name": "read",
            "call_code": "result = tool.read"
          },
          {
            "affordance_name": "read_now",
            "call_code": "result = tool.read(params['template_name'])"
          },
          {
            "affordance_name": "create_template_function",
            "call_code": "result = tool.create_template_function(template=params['template'])"
          }
        ]
      },
      {
        "tool_name": "llm",
        "affordances": [
          {
            "affordance_name": "generate",
            "call_code": "result = tool.generate"
          }
        ]
      },
      {
        "tool_name": "perception_router",
        "affordances": [
          {
            "affordance_name": "perceive",
            "call_code": "result = tool.perceive(params['token'], states.body)"
          },
          {
            "affordance_name": "strip_sign",
            "call_code": "result = tool.strip_sign(params['token'])"
          }
        ]
      }
    ]
  },
  "sequence_spec": {
    "steps": [
      {
        "step_index": 1,
        "affordance": "formatter_tool.get",
        "params": {},
        "result_key": "dict_get_fn"
      },
      {
        "step_index": 2,
        "affordance": "perception_router.strip_sign",
        "params": {
          "token": {
            "__type__": "MetaValue",
            "key": "states.vertical"
          }
        },
        "result_key": "raw_path"
      },
      {
        "step_index": 3,
        "affordance": "prompt_tool.read_now",
        "params": {
          "template_name": {
            "__type__": "MetaValue",
            "key": "raw_path"
          }
        },
        "result_key": "prompt_obj"
      },
      {
        "step_index": 4,
        "affordance": "prompt_tool.create_template_function",
        "params": {
          "template": {
            "__type__": "MetaValue",
            "key": "prompt_obj"
          }
        },
        "result_key": "template_fn"
      },
      {
        "step_index": 5,
        "affordance": "llm.generate",
        "params": {},
        "result_key": "generate_fn"
      },
      {
        "step_index": 6,
        "affordance": "formatter_tool.clean_code",
        "params": {},
        "result_key": "clean_code_fn"
      },
      {
        "step_index": 7,
        "affordance": "formatter_tool.parse_json",
        "params": {},
        "result_key": "parse_json_fn"
      },
      {
        "step_index": 8,
        "affordance": "formatter_tool.wrap",
        "params": {},
        "result_key": "wrap_fn"
      },
      {
        "step_index": 9,
        "affordance": "composition_tool.compose",
        "params": {
          "plan": [
            {
              "output_key": "filled_prompt",
              "function": {
                "__type__": "MetaValue",
                "key": "template_fn"
              },
              "params": {
                "__positional__": "__initial_input__"
              }
            },
            {
              "output_key": "raw_llm_response",
              "function": {
                "__type__": "MetaValue",
                "key": "generate_fn"
              },
              "params": {
                "__positional__": "filled_prompt"
              }
            },
            {
              "output_key": "cleaned_response",
              "function": {
                "__type__": "MetaValue",
                "key": "clean_code_fn"
              },
              "params": {
                "__positional__": "raw_llm_response"
              }
            },
            {
              "output_key": "parsed_json",
              "function": {
                "__type__": "MetaValue",
                "key": "parse_json_fn"
              },
              "params": {
                "__positional__": "cleaned_response"
              }
            },
            {
              "output_key": "answer",
              "function": {
                "__type__": "MetaValue",
                "key": "dict_get_fn"
              },
              "params": {
                "dictionary": "parsed_json"
              },
              "literal_params": {
                "key": "answer"
              }
            },
            {
              "output_key": "wrapped_result",
              "function": {
                "__type__": "MetaValue",
                "key": "wrap_fn"
              },
              "params": {
                "__positional__": "answer"
              }
            }
          ],
          "return_key": "wrapped_result"
        },
        "result_key": "instruction_fn"
      }
    ]
  }
}
