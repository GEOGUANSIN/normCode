{
  "name": "黄金投资建议",
  "version": "1.0.0",
  "description": "中文版",
  "entry": {
    "concepts": "concept_repo.json",
    "inferences": "inference_repo.json"
  },
  "inputs": {
    "{模拟数据：价格数据}": {
      "type": "any",
      "required": true,
      "description": "模拟数据：价格数据"
    },
    "{模拟数据：新闻数据}": {
      "type": "any",
      "required": true,
      "description": "模拟数据：新闻数据"
    },
    "{模拟数据：理论框架}": {
      "type": "any",
      "required": true,
      "description": "模拟数据：理论框架"
    },
    "{模拟数据：投资者风险偏好}": {
      "type": "any",
      "required": true,
      "description": "模拟数据：投资者风险偏好"
    },
    "$. %>({投资决策})": {
      "type": "any",
      "required": true,
      "description": "投资决策"
    },
    ":%(composition):{paradigm}(从市场来源获取价格数据)": {
      "type": "any",
      "required": true,
      "description": "从市场来源获取价格数据"
    },
    ":%(composition):{paradigm}(从文本来源获取新闻数据)": {
      "type": "any",
      "required": true,
      "description": "从文本来源获取新闻数据"
    },
    ":%(composition):{paradigm}(从领域专家获取理论框架)": {
      "type": "any",
      "required": true,
      "description": "从领域专家获取理论框架"
    },
    ":%(composition):{paradigm}(收集投资者约束：{1}<$({风险承受能力})%>、{2}<$({最大持仓})%>、{3}<$({止损规则})%>、{4}<$({投资期限})%>)": {
      "type": "any",
      "required": true,
      "description": "收集投资者约束：风险承受能力、最大持仓、止损规则、投资期限"
    },
    "&[#] %>[{量化信号}, {叙事信号}] %+(信号)": {
      "type": "any",
      "required": true,
      "description": "量化信号和叙事信号组"
    },
    ":%(composition):(根据{1}<$([价格数据])%>计算价格指标)": {
      "type": "any",
      "required": true,
      "description": "根据价格数据计算价格指标"
    },
    ":%(composition):(从{1}<$([新闻数据])%>提取情绪和主题)": {
      "type": "any",
      "required": true,
      "description": "从新闻数据提取情绪和主题"
    },
    ":%(composition):({1}<$({验证信号})%>超出{2}<$({理论框架})%>的预测) <对每个{验证信号}为真>": {
      "type": "any",
      "required": true,
      "description": "验证信号超出理论框架预测"
    },
    ":%(composition):({1}<$({验证信号})%>低于{2}<$({理论框架})%>的预测) <对每个{验证信号}为真>": {
      "type": "any",
      "required": true,
      "description": "验证信号低于理论框架预测"
    },
    ":%(composition):({1}<$(<信号状态>)%>) <对每个{信号}当所有{状态类型}为假>": {
      "type": "any",
      "required": true,
      "description": "信号状态"
    },
    "&[#] %>[<信号超出理论预期>, <信号偏离理论预期>] %^<$!={信号}>": {
      "type": "any",
      "required": true,
      "description": "信号超出理论预期和信号偏离理论预期组"
    },
    ":%(composition):(根据{1}<$([所有建议])%>在{2}<$({投资者风险偏好})%>约束下综合最终决策)": {
      "type": "any",
      "required": true,
      "description": "根据投资者风险偏好约束综合所有建议得出最终决定"
    },
    "&[{}] %>[{看涨建议}, {看跌建议}, {中性建议}] %+(建议)": {
      "type": "any",
      "required": true,
      "description": "看涨建议、看跌建议和中性建议包"
    },
    ":%(composition):(根据{1}<$({验证信号})%>和{2}<$({投资者风险偏好})%>生成带仓位管理的买入建议)": {
      "type": "any",
      "required": true,
      "description": "根据验证信号和投资者风险偏好生成带仓位管理的买入建议"
    },
    "@:' (<信号超出理论预期>)": {
      "type": "any",
      "required": true,
      "description": "信号超出理论预期"
    },
    ":%(composition):(根据{1}<$({验证信号})%>和{2}<$({投资者风险偏好})%>生成带仓位管理的卖出建议)": {
      "type": "any",
      "required": true,
      "description": "根据验证信号和投资者风险偏好生成带仓位管理的卖出建议"
    },
    "@:' (<信号偏离理论预期>)": {
      "type": "any",
      "required": true,
      "description": "信号偏离理论预期"
    },
    ":%(composition):(根据{1}<$({验证信号})%>生成持有建议)": {
      "type": "any",
      "required": true,
      "description": "根据验证信号生成持有建议"
    },
    "@:' (<信号中性>)": {
      "type": "any",
      "required": true,
      "description": "信号中性"
    }
  },
  "outputs": {
    ":<:({投资决策})": {
      "type": "any",
      "description": "投资决策"
    }
  },
  "default_agent": "Alibaba Cloud (DashScope) - qwen-plus",
  "provisions": {
    "paradigms": "provisions/paradigms",
    "prompts": "provisions/prompts",
    "scripts": "provisions/scripts",
    "data": "provisions/data",
    "prompts_chinese": "provisions/prompts_chinese",
    "scripts_chinese": "provisions/scripts_chinese"
  }
}