

:<:({normcode draft})

    <= $.({normcode draft})

    <- {normtext}
        ...: "The normtext is the text that is being translated."
        ?: What is the normtext?
        <= :>:{normtext}?()
            /: "The normtext is the text that is being translated is given by the user."

    <- {normcode draft}<$={1}> | 1.1. imperative
        <= ::(perform step 1 initialization of the translation process)
    
    <- {normcode draft}<$={2}> | 1.2. imperative
        ...: "The normcode draft is the draft of the normcode that is being translated."
        <= *every({normcode draft})



            <- <normcode draft is an empty concept>
                <= ::<{normcode draft} is an empty concept>

            <- {normcode draft}<$={2}>
                <= $.({normcode draft}<$={1}>)
                    <= @if(<normcode draft is an empty concept>)
                <- {normcode draft}<$={1}>

            <- {normcode draft}<$={2}>
                <= :_:{decomposition}({normcode draft})
                    <= @if!(<normcode draft is a empty concept>)
                    <- <{normcode draft} is an empty concept>
                <- {decomposition}
                <- {normcode draft}

            <- {decomposition}
                <- across
                <- {targeting one concept for decomposition}
                    <= $::.([{concept to decomposed} and {remaining normtext}])
                    <- :LLM:{direct}({concept identification prompt}<$(prompt)%>: {normcode draft})
                    <- {concept identification prompt}
                    <- {concept}?
                    <- {normcode draft}
                <- {question formulation}
                    <= $::.([{question} and {question type}])
                    <- :LLM:{direct}({question inquiry prompt}<$(prompt)%>: {concept to decomposed}, {remaining normtext})
                    <- {question inquiry prompt}
                <- {operator selection}
                    <= $::.({operator})
                    <- :LLM:{direct}({operator selection prompt}<$(prompt)%>: {question}, {concept to decomposed}, {question type}, {remaining normtext})
                    <- {operator selection prompt}
                <- {children concept creation}
                    <= $::.({children concepts})
                    <- :LLM:{direct}({children concept creation prompt}<$(prompt)%>: {operator}, {question}, {concept to decomposed}, {question type}, {remaining normtext})
                    <- {children concept creation prompt}
                <- {normtext distribution}
                    <= $::.([{children concepts} and {remaining normtext}])
                    <- :LLM:{direct}({normtext distribution prompt}<$(prompt)%>: {children concepts}, {remaining normtext})
                    <- {normtext distribution prompt}
                <- {new normcode draft creation}
                    <= $::.({new normcode draft})
                    <- :LLM:{direct}({new normcode draft creation prompt}<$(prompt)%>: {children concepts}, {remaining normtext})
                    <- {new normcode draft creation prompt}

                <- {normcode draft update}
                    <= $::
                    <- :<:({normcode draft})
                    <- {normcode draft}
                        <- :LLM:{direct}({normcode draft update prompt}<$(prompt)%>: {normcode draft}, {new normcode draft})
                        <- {normcode draft update prompt}
                        <- {normcode draft}
                        <- {new normcode draft}



            


        <- {normcode draft}<$={2}>