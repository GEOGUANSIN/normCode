:<:({Love}) | 1. assigning
    <= $.({deep feeling}) | 1.1. timing
        <= @if(<definition satisfied>)
        <- <definition satisfied> | 1.1.1. judgement
            <= ::{ALL(true)}<{individual conditions}>
            <- {individual conditions} | 1.1.1.1. grouping
                <= &across({1},{2},{3},{4})
                <- <shows through actions><$={1}><:{1}>
                <- <can be between various entities><$={1}><:{2}>
                <- <means acceptance and wanting happiness><$={1}><:{3}>
                <- <is a dual concept><$={1}><:{4}>
    <- {input text}<$={1}> | 1.2. io
        <= :>:{input text}?()
        <- {input text}?
            |%. "The input text is the text that is being analyzed. This is a text where there are information about the deep feeling that may or may not qualify as love."
    <- {deep feeling}<$={1}> | 1.3. imperative
        <= ::(find the {1}<$({deep feeling})%> in the {2}<$({input text})%> or implied by the {2}<$({input text})%>)
        <- {deep feeling}?<:{1}>
            |%. "a deep feeling of care and attachment toward someone or something."
        <- {input text}<$={1}><:{2}>
    <- <shows through actions><$={1}> | 1.4. judgement
        <= ::<{1}<$({deep feeling})%> shows through {2}<$({actions})%> in the {3}<$({input text})%> or implied by the {3}<$({input text})%>>
            |%. "This deep feeling shows through kind acts, sacrifice, and caring about another person's happiness."
        <- {deep feeling}<$={1}><:{1}>
        <- {actions}?<:{2}>
            |%. "such as kind acts, sacrifice, and caring about another person's happiness."
        <- {input text}<$={1}><:{3}>
    <- <can be between various entities><$={1}> | 1.5. judgement
        <= ::<{1}<$({deep feeling})%> exists between {2}<$({entities})%> in the {3}<$({input text})%> or implied by the {3}<$({input text})%>>
            |%. "This deep feeling can be between partners, family, friends, or even spiritual connections."
        <- {deep feeling}<$={1}><:{1}>
        <- {entities}?<:{2}>
            |%. "such as partners, family, friends, or even spiritual connections."
        <- {input text}<$={1}><:{3}>
    <- <means acceptance and wanting happiness><$={1}> | 1.6. judgement
        <= ::<{1}<$({deep feeling})%> has {2}<$({meaning})%> in the {3}<$({input text})%> or implied by the {3}<$({input text})%>>
            |%. "This deep feeling means accepting someone and wanting them to be happy, even when it's hard."
        <- {deep feeling}<$={1}><:{1}>
        <- {meaning}?<:{2}>
            |%. "such as accepting someone and wanting them to be happy, even when it's hard."
        <- {input text}<$={1}><:{3}>
    <- <is a dual concept><$={1}> | 1.7. judgement
        <= ::<{1}<$({deep feeling})%> has a dual nature of {2}<$({emotion})%> and {3}<$({decision})%> in the {4}<$({input text})%> or implied by the {4}<$({input text})%>>
            |%. "This deep feeling is both an emotion and a decision to put someone else's wellbeing first."
        <- {deep feeling}<$={1}><:{1}>
        <- {emotion}?<:{2}>
            |%. "such as an emotion of wanting someone else's wellbeing first."
        <- {decision}?<:{3}>
            |%. "such as a decision of putting someone else's wellbeing first."
        <- {input text}<$={1}><:{4}>
