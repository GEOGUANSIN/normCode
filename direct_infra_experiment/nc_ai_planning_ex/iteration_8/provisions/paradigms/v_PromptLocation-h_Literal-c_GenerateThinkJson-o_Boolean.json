{
  "metadata": {
    "description": "Generate boolean judgement using LLM with vertical prompt template and horizontal literal data",
    "inputs": {
      "vertical": {
        "prompt_template": "Path to prompt file (perception-wrapped, stripped at runtime)"
      },
      "horizontal": {
        "data": "Runtime data (value concept has perceptual sign, MVP perceives it)"
      }
    },
    "outputs": {
      "type": "Boolean",
      "description": "Boolean result from LLM evaluation wrapped as truth_value"
    }
  },
  "env_spec": {
    "tools": [
      {
        "tool_name": "llm",
        "affordances": [
          {
            "affordance_name": "generate",
            "call_code": "result = tool.generate"
          }
        ]
      },
      {
        "tool_name": "file_system",
        "affordances": [
          {
            "affordance_name": "read",
            "call_code": "result = tool.read"
          }
        ]
      },
      {
        "tool_name": "formatter_tool",
        "affordances": [
          {
            "affordance_name": "create_substitute_function",
            "call_code": "result = tool.create_substitute_function(template_key=params['template_key'])"
          },
          {
            "affordance_name": "parse_boolean",
            "call_code": "result = tool.parse_boolean"
          },
          {
            "affordance_name": "get",
            "call_code": "result = tool.get"
          },
          {
            "affordance_name": "wrap",
            "call_code": "result = tool.wrap"
          }
        ]
      },
      {
        "tool_name": "composition_tool",
        "affordances": [
          {
            "affordance_name": "compose",
            "call_code": "result = tool.compose(plan=params['plan'], return_key=params.get('return_key'))"
          }
        ]
      },
      {
        "tool_name": "perception_router",
        "affordances": [
          {
            "affordance_name": "strip_sign",
            "call_code": "result = tool.strip_sign(params['token'])"
          }
        ]
      }
    ]
  },
  "sequence_spec": {
    "steps": [
      {
        "step_index": 1,
        "affordance": "perception_router.strip_sign",
        "params": {
          "token": {"__type__": "MetaValue", "key": "states.vertical"}
        },
        "result_key": "raw_prompt_path"
      },
      {
        "step_index": 2,
        "affordance": "file_system.read",
        "params": {},
        "result_key": "read_fn"
      },
      {
        "step_index": 3,
        "affordance": "formatter_tool.get",
        "params": {},
        "result_key": "get_fn"
      },
      {
        "step_index": 4,
        "affordance": "formatter_tool.create_substitute_function",
        "params": {
          "template_key": "prompt_template"
        },
        "result_key": "template_fn"
      },
      {
        "step_index": 5,
        "affordance": "llm.generate",
        "params": {},
        "result_key": "generate_fn"
      },
      {
        "step_index": 6,
        "affordance": "formatter_tool.parse_boolean",
        "params": {},
        "result_key": "parse_bool_fn"
      },
      {
        "step_index": 7,
        "affordance": "formatter_tool.wrap",
        "params": {},
        "result_key": "wrap_fn"
      },
      {
        "step_index": 8,
        "affordance": "composition_tool.compose",
        "params": {
          "plan": [
            {
              "output_key": "prompt_read_result",
              "function": {"__type__": "MetaValue", "key": "read_fn"},
              "params": {"__positional__": {"__type__": "MetaValue", "key": "raw_prompt_path"}}
            },
            {
              "output_key": "prompt_template",
              "function": {"__type__": "MetaValue", "key": "get_fn"},
              "params": {"dictionary": "prompt_read_result"},
              "literal_params": {"key": "content"}
            },
            {
              "output_key": "input_data_merged",
              "function": {"__type__": "MetaValue", "key": "get_fn"},
              "params": {"dictionary": "__initial_input__"},
              "literal_params": {"key": "_merge_all_inputs"}
            },
            {
              "output_key": "filled_prompt",
              "function": {"__type__": "MetaValue", "key": "template_fn"},
              "params": {"__positional__": "input_data_merged"}
            },
            {
              "output_key": "llm_response",
              "function": {"__type__": "MetaValue", "key": "generate_fn"},
              "params": {"__positional__": "filled_prompt"}
            },
            {
              "output_key": "parsed_bool",
              "function": {"__type__": "MetaValue", "key": "parse_bool_fn"},
              "params": {"__positional__": "llm_response"}
            },
            {
              "output_key": "final_result",
              "function": {"__type__": "MetaValue", "key": "wrap_fn"},
              "params": {"__positional__": "parsed_bool"},
              "literal_params": {"type": "truth_value"}
            }
          ],
          "return_key": "final_result"
        },
        "result_key": "instruction_fn"
      }
    ]
  }
}
