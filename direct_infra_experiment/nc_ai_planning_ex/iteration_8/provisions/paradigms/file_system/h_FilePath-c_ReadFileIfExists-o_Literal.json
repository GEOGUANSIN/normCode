{
  "paradigm_id": "h_FilePath-c_ReadFileIfExists-o_Literal",
  "description": "Read file content if file exists, otherwise return empty string",
  "body_faculty": "file_system",
  
  "inputs": {
    "horizontal": {
      "file_path": {
        "norm": "in-memory",
        "description": "Path to the file to read",
        "required": true
      }
    }
  },
  
  "composition": {
    "steps": [
      {
        "step": "check_exists",
        "action": "body.file_system.exists(h.file_path)",
        "output": "exists"
      },
      {
        "step": "read_if_exists",
        "action": "if exists: body.file_system.read(h.file_path) else: ''",
        "output": "file_content"
      }
    ]
  },
  
  "output": {
    "format": "o_Literal",
    "type": "str",
    "description": "File content as string, or empty string if file doesn't exist"
  },
  
  "error_handling": {
    "encoding_error": "try utf-8, then latin-1"
  }
}

