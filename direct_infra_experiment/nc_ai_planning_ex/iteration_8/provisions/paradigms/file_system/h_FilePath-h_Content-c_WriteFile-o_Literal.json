{
  "paradigm_id": "h_FilePath-h_Content-c_WriteFile-o_Literal",
  "description": "Write string content to file",
  "body_faculty": "file_system",
  
  "inputs": {
    "horizontal": {
      "file_path": {
        "norm": "in-memory",
        "description": "Path to the file to write",
        "required": true,
        "order": 1
      },
      "content": {
        "norm": "in-memory",
        "description": "String content to write",
        "required": true,
        "order": 2
      }
    }
  },
  
  "composition": {
    "steps": [
      {
        "step": "ensure_dir",
        "action": "create parent directories if needed",
        "output": null
      },
      {
        "step": "write",
        "action": "body.file_system.write(h.file_path, h.content)",
        "output": "write_result"
      }
    ]
  },
  
  "output": {
    "format": "o_Literal",
    "type": "str",
    "description": "Confirmation string (e.g., 'written to path/to/file')"
  },
  
  "error_handling": {
    "permission_error": "propagate error",
    "disk_full": "propagate error"
  }
}

