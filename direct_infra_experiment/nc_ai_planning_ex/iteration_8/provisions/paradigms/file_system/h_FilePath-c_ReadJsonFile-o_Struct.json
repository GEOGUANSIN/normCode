{
  "paradigm_id": "h_FilePath-c_ReadJsonFile-o_Struct",
  "description": "Read and parse JSON file content",
  "body_faculty": "file_system",
  
  "inputs": {
    "horizontal": {
      "file_path": {
        "norm": "in-memory",
        "description": "Path to the JSON file to read",
        "required": true
      }
    }
  },
  
  "composition": {
    "steps": [
      {
        "step": "read",
        "action": "body.file_system.read(h.file_path)",
        "output": "file_content"
      },
      {
        "step": "parse",
        "action": "json.loads(file_content)",
        "output": "parsed_data"
      }
    ]
  },
  
  "output": {
    "format": "o_Struct",
    "type": "dict | list",
    "description": "Parsed JSON structure"
  },
  
  "error_handling": {
    "file_not_found": "propagate error",
    "json_parse_error": "propagate error with context"
  }
}

