{
  "paradigm_id": "h_Data-c_CheckPhaseComplete-o_Boolean",
  "description": "Check if a specific phase is marked as complete in the progress string",
  "body_faculty": "python_interpreter",
  
  "inputs": {
    "horizontal": {
      "progress_content": {
        "norm": "in-memory",
        "description": "Content of progress.txt file",
        "required": true
      },
      "phase_number": {
        "norm": "in-memory",
        "description": "Phase number to check (extracted from context)",
        "required": false,
        "default": "inferred from caller context"
      }
    }
  },
  
  "composition": {
    "script": "scripts/check_phase_complete.py",
    "function": "check_phase_complete",
    "steps": [
      {
        "step": "parse_progress",
        "action": "split progress_content by newlines",
        "output": "completed_phases"
      },
      {
        "step": "check_phase",
        "action": "check if 'phase_{N}_complete' in completed_phases",
        "output": "is_complete"
      }
    ]
  },
  
  "output": {
    "format": "o_Boolean",
    "type": "bool",
    "description": "True if phase is complete, False otherwise"
  },
  
  "notes": [
    "Phase number is extracted from the functional concept context",
    "e.g., 'check if phase 3 already complete' â†’ phase_number = 3",
    "Progress file format: one 'phase_N_complete' per line"
  ]
}

